@inherits LayoutComponentBase

<div class="container-fluid app">
    <!--Menu left-->
    <div class="menu-left">
        <div class="menu-items">
            <a href="#">
                <i class='bx bx-home-alt'></i>
            </a>
            <a href="#">
                <i class='bx bx-chat'></i>
            </a>
            <a href="#">
                <i class='bx bxs-user-account'></i>
            </a>
        </div>
        
        <div class="menu-setting">
            <a href="#">
                <i class='bx bx-cog'></i>
            </a>
        </div>
    </div>
    <!--User and history-->
    <div class="menu-user-histories">
        <div class="menu-user-histories-top">
            <h3>Chat</h3>
            <div class="user">
                <a href="/edit">
                    <div class="user-infor">
                        <i class='bx bxs-user-circle'></i>
                        <p>Full Name OTP</p>
                    </div>
                </a>
               
                <div class="menu-user-histories-options">
                    <a href="#"><i class='bx bx-message-add'></i></a>
                    <a href="#"><i class='bx bx-user-plus'></i></a>
                    <a href="#"><i class='bx bx-dots-horizontal-rounded'></i></a>
                </div>
            </div>
        </div>
        <div class="menu-user-histories-history">

            <div class="search-histories">
                <input type="text" placeholder="search here ..."/>
                <i class='bx bx-search'></i>
            </div>
            <div class="text-recent">
                <h6>Recent</h6>
                <span></span>
            </div>
            <a href="#" class="chat-histories">
                <div class="chat-histories-inf">
                    <i class='bx bxs-user-circle'></i>
                    <p>User send message 1</p>
                </div>
                <span class="time">1d</span>
            </a>

            <a href="#" class="chat-histories">
                <div class="chat-histories-inf">
                    <i class='bx bxs-user-circle'></i>
                    <p>User send message 2</p>
                </div>
                <span class="time">1d</span>
            </a> 
            <a href="#" class="chat-histories">
                <div class="chat-histories-inf">
                    <i class='bx bxs-user-circle'></i>
                    <p>User send message 3</p>
                </div>
                <span class="time">1d</span>
            </a>
        </div>
    </div>
    <!--Chat Box-->
    <div class="chat-box">
        <div class="user-send-inf">
            <div class="user-send-left">
                <div class="info-message">
                    <i class='bx bxs-user-circle'></i>
                    <p>Name info message send!</p>
                </div>
                <div class="tab-message">
                    <a href="/chat-box">Chat</a>
                    <a href="/file">File</a>
                </div>
            </div>
          
           <div class="info-icons">
                <i class='bx bx-info-circle'></i>
           </div>
        </div>
           @Body
       
    </div>
</div>